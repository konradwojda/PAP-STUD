<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.iipw.pap.controller.ExportToGTFSController">
   <children>
      <VBox alignment="CENTER_LEFT" prefHeight="100.0" style="-fx-background-color: #9E5C63;" VBox.vgrow="ALWAYS">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Export To GTFS">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </Text>
         </children>
      </VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="GTFS file name:" />
                  <TextField fx:id="txtFileName" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Button fx:id="btnBrowse" mnemonicParsing="false" onAction="#onBrowse" prefWidth="150.0" style="-fx-background-color: #EB8892;" text="Browse" textFill="#111e1e" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </HBox>
      <Text fx:id="txtDirectory" strokeType="OUTSIDE" strokeWidth="0.0" text="Directory:">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </Text>
      <HBox alignment="BOTTOM_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Text fx:id="txtExportError" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" />
            <Button fx:id="btnExportOk" mnemonicParsing="false" onAction="#onExportOk" prefWidth="100.0" style="-fx-background-color: #EB8892;" text="OK" textFill="#111e1e" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
